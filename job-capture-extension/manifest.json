{
  "manifest_version": 3,
  "name": "Job Capture - Job Search CRM",
  "version": "1.7.2",
  "description": "Capture jobs from LinkedIn, Indeed, Glassdoor, and any webpage. Includes AI assistant for applications.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*",
    "https://www.indeed.com/*",
    "https://www.glassdoor.com/*",
    "https://*.vercel.app/*",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["resume-template.html", "resume-interactivity.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
